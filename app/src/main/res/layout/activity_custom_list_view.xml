<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomListView">


    <ImageView
        android:id="@+id/ExerImage"
        android:layout_width="38dp"
        android:layout_height="42dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="373dp"
        app:srcCompat="@drawable/ic_baseline_fitness_center_24" />

    <TextView
        android:id="@+id/ExerNameTXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ExerImage"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="52dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="281dp"
        android:layout_marginBottom="12dp"
        android:text="TextView" />


    <EditText
        android:id="@+id/Num_Rep_TXT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="247dp"
        android:layout_marginBottom="9dp"
        android:layout_weight="2"
        android:text="0"
        android:textSize="15dp" />

    <Button
        android:id="@+id/UpBTNWeight"
        android:layout_width="46dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="42dp"
        android:text="+" />

    <Button
        android:id="@+id/DownBTNWeight"
        android:layout_width="46dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="204dp"
        android:layout_marginEnd="159dp"
        android:layout_weight="1"
        android:text="-" />

    <EditText
        android:id="@+id/editTextWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="263dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="102dp"
        android:layout_marginBottom="-6dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="0.0"
        android:textAlignment="center" />


</RelativeLayout>